@model List<Transaction>
<h2>Transaction Report</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Amount (MYR)</th>
            <th>Exchange Rate</th>
            <th>Payout (NPR)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.TransactionDate.ToShortDateString()</td>
                <td>@transaction.Sender.FirstName @transaction.Sender.LastName</td>
                <td>@transaction.Receiver.FirstName @transaction.Receiver.LastName</td>
                <td>@transaction.TransferAmount.ToString("N2")</td>
                <td>@transaction.ExchangeRate.ToString("N4")</td>
                <td>@transaction.PayoutAmount.ToString("N2")</td>
            </tr>
        }
    </tbody>
</table>